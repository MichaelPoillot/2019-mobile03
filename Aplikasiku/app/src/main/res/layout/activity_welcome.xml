<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".WelcomeActivity">

	<ImageView
		android:id="@+id/calendar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp"
		android:src="@drawable/ic_eventlist"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/welcome_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		android:textColor="#313131"
		android:layout_centerHorizontal="true"
		android:text="Welcome To Michael App"
		android:layout_below="@id/calendar"
		android:fontFamily="@font/montserrat_semi_bold"
		/>

	<TextView
		android:id="@+id/sub_welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#313131"
		android:text="What is going to happen tomorrow ?"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/welcome_text"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:fontFamily="@font/montserrat_light"
		/>

	<ImageView
		android:id="@+id/background_satu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_constraintBottom_toBottomOf="parent"
		android:layout_constraintEnd_toEndOf="parent"
		android:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="0dp"
		android:scaleType="fitXY"
		android:src="@drawable/bg_red" />

	<TextView
		android:id="@+id/login_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_constraintBottom_toBottomOf="parent"
		android:layout_constraintLeft_toLeftOf="parent"
		android:layout_constraintRight_toRightOf="parent"
		android:layout_marginStart="4dp"
		android:layout_marginTop="629dp"
		android:layout_marginBottom="72dp"
		android:fontFamily="@font/montserrat_light"
		android:text="Login"
		android:textColor="#FFFFFF"
		android:textSize="18sp" />

</RelativeLayout>
